- model_class = ActivityType
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @activity_type.name


= link_to t('.back', :default => t("helpers.links.back")), activity_types_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_activity_type_path(@activity_type), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), activity_type_path(@activity_type), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
